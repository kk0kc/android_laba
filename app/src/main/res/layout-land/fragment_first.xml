<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/counter"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl_center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/button_to_second"
        android:layout_width="180dp"
        android:layout_height="68dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/blue"
        android:text="Переход"
        app:shapeAppearanceOverlay="@style/rounded_corner"
        app:layout_constraintTop_toBottomOf="@+id/counter"
        app:layout_constraintBottom_toTopOf="@id/button_counter"
        app:layout_constraintEnd_toStartOf="@+id/gl_center"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/button_counter"
        android:layout_width="180dp"
        android:layout_height="68dp"
        app:shapeAppearanceOverlay="@style/rounded_corner"
        android:backgroundTint="@color/my_purple"
        android:text="Увеличить на 1"
        app:layout_constraintEnd_toStartOf="@+id/gl_center"
        app:layout_constraintTop_toBottomOf="@id/button_to_second"
        app:layout_constraintBottom_toTopOf="@id/button_dialog"

        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        app:layout_constraintEnd_toStartOf="@+id/gl_center"
        android:id="@+id/button_dialog"
        android:layout_width="180dp"
        android:layout_height="68dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="@color/my_yellow"
        android:text="Свое значение"
        app:shapeAppearanceOverlay="@style/rounded_corner"
        app:layout_constraintTop_toBottomOf="@id/button_counter"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:name="com.example.androidlab.SecondFragment"
        app:layout_constraintStart_toEndOf="@+id/gl_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>